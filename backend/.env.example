# Environment variables for TrackMasterPro backend
# Copy this file to .env and update the values for your environment

# JWT Settings
# In production, use a strong, randomly generated key
JWT_SECRET_KEY=replace_with_a_strong_random_key

# Database Settings
# For production, use a proper database URL (PostgreSQL recommended)
DATABASE_URL=sqlite:///./trackmaster.db

# Server Settings
PORT=8000
HOST=0.0.0.0
ENVIRONMENT=production  # Set to 'development' for development mode

# Logging Settings
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
